#include <stdio.h>

int main() {
   int n;
   int a[4];
   double media = 0;
   puts("Ingrese 4 numeros");
   for(int i = 0; i < 4; i++){
       scanf("%d", &n);
       a[i] = n;
       printf("%d ",a[i]);
       media += n;
     }
     printf("\n");
     printf("La media aritmetica es %.2f\n", media / 4);
    return 0;
}
