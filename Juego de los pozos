#include<stdio.h>
#include<stdlib.h>
#include<time.h>

int main(){
    int m[10][10];
    int direccion;
    int jugador = 2;
    int vidas = 0;
    int fila = 0;
    int columna = 0;
    int k = 0;
    srand(time(NULL));
    puts("Juego de los pozos");
    puts("0) pozos");
    puts("1) Tierra");
    puts("2) Jugador");
    for(int i = 0; i < 10; i++){
        for(int j = 0; j < 10; j++){
            m[i][j] = random() % 2;
        }
    }
    m[fila][columna] = jugador;
    for(int i = 0; i < 10; i++){
        for(int j = 0; j < 10; j++){
            printf("%d ", m[i][j]);
        }
        printf("\n");
    }
    while(vidas != 3){
        int a = fila;
        int b = columna;
        printf("Elija una opcion\n 1)Norte\n 2)Sur\n 3)Este\n 4)Oeste:\n");
        scanf("%d", &direccion);
        if (direccion == 1) {
            k = m[fila - 1][columna];
            m[fila -1][columna] = jugador;
            m[a][b] = k;
            fila = a -1;
            columna = b; 
        } //sur 
         if (direccion == 2) {
          k = m[fila + 1][columna];
            m[fila +1][columna] = jugador;
            m[a][b] = k;
            fila = a +1;
            columna = b; 
      } //este 
        if (direccion == 3) {          
           k = m[fila][columna +1];
            m[fila][columna +1] = jugador;
            m[a][b] = k;
            fila = a;
            columna = b +1; 
        } //oeste 
        if (direccion == 4) {
         k = m[fila][columna -1];
            m[fila][columna -1] = jugador;
            m[a][b] = k;
            fila = a;
            columna = b -1; 
        } //mensaje de error
        else if (direccion > 4){
            puts("Opcion invalida");
            printf("\n");
            return 0;
        }
        if(m[a][b] == 0){
            vidas++;
        }
        if(m[fila][columna] == m[9][9]){
            puts("Ganaste");
            return 0;
        }
        a = fila;
        b = columna;
        for(int i = 0; i < 10; i++){
        for(int j = 0; j < 10; j++){
            printf("%d ", m[i][j]);
        }
        printf("\n");
    }
    m[fila][columna] = k;
    }
    puts("Perdiste");
    return 0;
}
            
